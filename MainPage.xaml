<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <ScrollView>
        <StackLayout Spacing="5">
            <!-- Total Money Display -->
            <Label x:Name="TotalMoneyLabel" 
                   Text="Total Money: $0" 
                   FontSize="Large" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>

            <!-- Business UI Definitions -->
            <!-- Lemonade Stand -->
            <Label x:Name="LemonadeStandCountLabel" 
                   Text="Lemonade Stands: 1" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="LemonadeStandButton" 
                    Text="Lemonade Stand ($1/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradeLemonadeStandButton" 
                    Text="Buy Max Lemonade Stands ($10 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>

            <!-- Newspaper -->
            <Label x:Name="NewspaperCountLabel" 
                   Text="Newspapers: 0" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="NewspaperButton" 
                    Text="Newspaper ($5/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradeNewspaperButton" 
                    Text="Buy Max Newspapers ($50 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>

            <!-- Car Wash -->
            <Label x:Name="CarWashCountLabel" 
                   Text="Car Washes: 0" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="CarWashButton" 
                    Text="Car Wash ($10/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradeCarWashButton" 
                    Text="Buy Max Car Washes ($100 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>

            <!-- Pizza Shop -->
            <Label x:Name="PizzaShopCountLabel" 
                   Text="Pizza Shops: 0" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="PizzaShopButton" 
                    Text="Pizza Shop ($20/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradePizzaShopButton" 
                    Text="Buy Max Pizza Shops ($200 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>

            <!-- Donut Shop -->
            <Label x:Name="DonutShopCountLabel" 
                   Text="Donut Shops: 0" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="DonutShopButton" 
                    Text="Donut Shop ($50/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradeDonutShopButton" 
                    Text="Buy Max Donut Shops ($500 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>

            <!-- Shrimp Boat -->
            <Label x:Name="ShrimpBoatCountLabel" 
                   Text="Shrimp Boats: 0" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="ShrimpBoatButton" 
                    Text="Shrimp Boat ($100/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradeShrimpBoatButton" 
                    Text="Buy Max Shrimp Boats ($1000 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>

            <!-- Hockey Team -->
            <Label x:Name="HockeyTeamCountLabel" 
                   Text="Hockey Teams: 0" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="HockeyTeamButton" 
                    Text="Hockey Team ($500/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradeHockeyTeamButton" 
                    Text="Buy Max Hockey Teams ($5000 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>

            <!-- Movie Theater -->
            <Label x:Name="MovieTheaterCountLabel" 
                   Text="Movie Theaters: 0" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="MovieTheaterButton" 
                    Text="Movie Theater ($1000/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradeMovieTheaterButton" 
                    Text="Buy Max Movie Theaters ($10000 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>

            <!-- Bank -->
            <Label x:Name="BankCountLabel" 
                   Text="Banks: 0" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="BankButton" 
                    Text="Bank ($5000/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradeBankButton" 
                    Text="Buy Max Banks ($50000 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>

            <!-- Oil Refinery -->
            <Label x:Name="OilRefineryCountLabel" 
                   Text="Oil Refineries: 0" 
                   FontSize="Medium" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start"/>
            <Button x:Name="OilRefineryButton" 
                    Text="Oil Refinery ($10000/click)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
            <Button x:Name="UpgradeOilRefineryButton" 
                    Text="Buy Max Oil Refineries ($100000 each)" 
                    HorizontalOptions="Center" 
                    VerticalOptions="CenterAndExpand"
                    Margin="0,2,0,2"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
